{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": false,
    "target": "esnext",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "paths": {
      "@assets/*": [
        "./assets/*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@constants/*": [
        "./constants/*"
      ],
      "@helpers/*": [
        "./helpers/*"
      ],
      "@navigations/*": [
        "./navigations/*"
      ],
      "@screens/*": [
        "./screens/*"
      ],
      "@shared/*": [
        "./shared/*"
      ],
      "@styles": [
        "./styles"
      ],
      "@utils/*": [
        "./utils/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
